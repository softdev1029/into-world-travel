<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_TAGMETA_FILTER"
			hint="JSEARCH_FILTER_LABEL"
		/>
		<field
			name="state"
			type="status"
			label="JOPTION_SELECT_PUBLISHED"
			description="JOPTION_SELECT_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			description="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="s.ordering ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="s.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="s.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="s.published ASC">JSTATUS_ASC</option>
			<option value="s.published DESC">JSTATUS_DESC</option>
			<option value="s.id ASC">COM_TAGMETA_HEADING_SYNONYMS_ID_ASC</option>
			<option value="s.id DESC">COM_TAGMETA_HEADING_SYNONYMS_ID_DESC</option>
			<option value="s.keywords ASC">COM_TAGMETA_HEADING_SYNONYMS_KEYWORDS_ASC</option>
			<option value="s.keywords DESC">COM_TAGMETA_HEADING_SYNONYMS_KEYWORDS_DESC</option>
			<option value="s.synonyms ASC">COM_TAGMETA_HEADING_SYNONYMS_SYNONYMS_ASC</option>
			<option value="s.synonyms DESC">COM_TAGMETA_HEADING_SYNONYMS_SYNONYMS_DESC</option>
			<option value="s.weight ASC">COM_TAGMETA_HEADING_SYNONYMS_WEIGHT_ASC</option>
			<option value="s.weight DESC">COM_TAGMETA_HEADING_SYNONYMS_WEIGHT_DESC</option>
			<option value="s.comment ASC">COM_TAGMETA_HEADING_SYNONYMS_COMMENT_ASC</option>
			<option value="s.comment DESC">COM_TAGMETA_HEADING_SYNONYMS_COMMENT_DESC</option>
			<option value="s.hits ASC">COM_TAGMETA_HEADING_SYNONYMS_HITS_ASC</option>
			<option value="s.hits DESC">COM_TAGMETA_HEADING_SYNONYMS_HITS_DESC</option>
			<option value="s.last_visit ASC">COM_TAGMETA_HEADING_SYNONYMS_LAST_VISIT_ASC</option>
			<option value="s.last_visit DESC">COM_TAGMETA_HEADING_SYNONYMS_LAST_VISIT_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TAGMETA_LIST_LIMIT"
			description="COM_TAGMETA_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
