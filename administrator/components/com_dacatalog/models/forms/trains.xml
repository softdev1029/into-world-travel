<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="params">
		<field name="date" type="calendar"
			   label="date"
			   class="input-small"
			   format="%Y-%m-%d"
			   filter="user_utc"
			   required="true"
		/>

		<field name="cityFrom" type="text"
			   label="cityFrom"
			   required="true"
		/>

		<field name="codeFrom" type="text"
			   label="codeFrom"
			   required="true"
		/>

		<field name="cityTo" type="text"
			   label="cityTo"
			   required="true"
		/>

		<field name="codeTo" type="text"
			   label="codeTo"
			   required="true"
		/>

		<field name="number" type="text"
			   label="number"
			   required="true"
		/>

		<field name="type"	type="list"
			   label="type">
			<option value="Сидячий">Сидячий</option>
			<option value="Плацкартный">Плацкартный</option>
			<option value="Купе">Купе</option>
			<option value="СВ">СВ</option>
			<option value="Люкс">Люкс</option>
		</field>

		<field name="price" type="number"
			   label="price"
		/>

		<field name="currency"	type="currency"
			   label="currency"
			   default="RUB"
		/>

		<field name="published"	type="list"
			   label="JSTATUS"
			   class="chzn-color-state"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="id" type="hidden"
			   default="0"
			   readonly="true"
		/>

	</fieldset>


</form>
