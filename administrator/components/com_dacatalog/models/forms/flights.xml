<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="params">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   required="true"
		/>

		<field name="date1" type="calendar"
			   label="date1"
			   class="input-small"
			   required="true"
			   format="%Y-%m-%d"
			   filter="user_utc"
		/>

		<field name="city1From" type="text"
			   label="city1From"
			   required="true"
		/>

		<field name="city1To" type="text"
			   label="city1To"
			   required="true"
		/>

		<field name="date2" type="calendar"
			   label="date2"
			   class="input-small"
			   format="%Y-%m-%d"
			   filter="user_utc"
		/>

		<field name="city2From" type="text"
			   label="city2From"
		/>

		<field name="city2To" type="text"
			   label="city2To"
		/>

		<field name="price" type="number"
			   label="price"
		/>

		<field name="currency"	type="currency"
			   label="currency"
			   default="RUB"
		/>

		<field name="published"	type="list"
			   label="JSTATUS"
			   class="chzn-color-state"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="id" type="hidden"
			   default="0"
			   readonly="true"
		/>

	</fieldset>


</form>
