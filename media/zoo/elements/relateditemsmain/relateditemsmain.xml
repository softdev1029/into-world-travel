<?xml version="1.0" encoding="utf-8"?>
<element type="relateditemsmain" group="Other" trusted="true">
	<name>Related Items Main</name>
	<author>-Dima-</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2007 - 2009 YOOtheme GmbH</copyright>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.yootheme.com</authorUrl>
	<version>2.5.16</version>
	<description>Related Items Main</description>
	<params>
		<param name="selectable_types" type="types1" default="" label="Limit to Type" description="LIMIT_ITEM_SELECTION" size="7" />
		<param name="revers_types" type="types2" default="" label="Limit to Revers Type [Catalog: Template - Releated Name]"   description="LIMIT_REVERS_SELECTION" size="7" />
		<param name="type_app" type="typeapp" default="" label="Select Application" description="APPLICATION_SELECTION" size="5" />
	</params>
	<params group="render">
		<param name="order" type="typeitemorder" default="_itemname" label="Order" description="ITEM_ORDER" add_default="true" random="true" />
		<param name="layout" type="typeslayout" default="" label="Layout" description="OVERRIDE_DEFAULT_OUTPUT" constraint="related" />
		<param name="link_to_item" type="radio" default="0" label="Link Item Name" description="Wrap name in link to item">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</param>
		<param name="limit" type="text" default="" label="Limit" description="ITEM_LIMIT">
		</param>
		<param name="separated_by" type="zoolist" default="Space" label="Separated by" description="CHOOSE_SEPARATOR_REPEATED_ELEMENTS">
			<option name="Space"><![CDATA[separator=[ ]]]></option>
			<option name="Comma"><![CDATA[separator=[, ]]]></option>
			<option name="Hyphen"><![CDATA[separator=[ - ]]]></option>
			<option name="Pipe"><![CDATA[separator=[ | ]]]></option>
			<option name="Break"><![CDATA[separator=[<br />]]]></option>
			<option name="Span"><![CDATA[tag=[<span>%s</span>]]]></option>
			<option name="Paragraph"><![CDATA[tag=[<p>%s</p>]]]></option>
			<option name="Div"><![CDATA[tag=[<div>%s</div>]]]></option>
						<option name="Div_catalog"><![CDATA[tag=[<div class="catalog__item">%s</div>]]]></option>

			<option name="List Item"><![CDATA[tag=[<li>%s</li>]]]></option>
			<option name="Unordered List"><![CDATA[tag=[<li>%s</li>] enclosing_tag=[<ul>%s</ul>]]]></option>
			<option name="Ordered List"><![CDATA[tag=[<li>%s</li>] enclosing_tag=[<ol>%s</ol>]]]></option>
			<option name="Warp Item"><![CDATA[tag=[<article class="item">%s</article>]]]></option>
		</param>		
	</params>
</element>